<% if user_signed_in? %>
    <headerbar >
       <header>
          <div class="logo">
           <%= link_to "",newsfeed_index_path,:class=>"animated rollIn"%>
          </div>
          <nav class="left-nav">

             <ul>
                <li>
                   <a href="/"><i class="fa fa-home" aria-hidden="true" style="-webkit-text-stroke-width: 1px;
                       -webkit-text-stroke-color: grey;color: white"></i><span> Home </span></a>
                </li>
                <li>
                   <%= link_to confessions_path do%>
                       <i class="fa fa-heart" aria-hidden="true" style="-webkit-text-stroke-width: 1px;
                           -webkit-text-stroke-color: grey;color: white"></i> Confessions <% end %>
                </li>
                <li>
                   <%= link_to memes_path do %>
                       <i class="fa fa-smile-o" aria-hidden="true "></i>Memes <%end%>
                </li>
             </ul>

          </nav>



          <nav class="right-nav">
             <ul>
                <li>



                   <%= form_tag search_users_path, :method => 'get' do %>
                       <div class="ui icon input"  style="">
                          <input type="text" name="query" class="typeahead" placeholder="Search">

                          <button class="ui button" style="background:#7e2444;color:white;display: none">

                          </button>

                       </div>

                   <% end %>
                </li>
                <li>
                   <%= link_to search_users_path do %>
                       <i class="fa fa-users" aria-hidden="true" style="-webkit-text-stroke-width: 1px;
                           -webkit-text-stroke-color: grey;color: white"></i>
                   <%end%>
                </li>
                <li>
                   <%= link_to notifications_show_path do%>
                       <i class="fa fa-bell" aria-hidden="true" style="-webkit-text-stroke-width: 1px;
                           -webkit-text-stroke-color: grey;color: white"></i>
                       <%= current_user.new_notifications if current_user.new_notifications > 0 %>
                   <% end %>
                </li>
                <li>
                   <%= link_to requests_path do%>
                       <i class="fa fa-arrow-down" aria-hidden="true" style="-webkit-text-stroke-width: 1px;
                           -webkit-text-stroke-color: grey;color: white"></i>
                   <% end %>
                </li>




             </ul>

             <div class="" style="padding-left: 10px" >
                <div class="ui dropdown  ">
                   <%= current_user.name.capitalize %>
                   <i class="dropdown icon" style="margin-left: 0"></i>
                   <div class="menu">
                      <div class="item my_link">
                         <a style="display:block;padding: 10px" href="/mode/select">
                            <div class="xyz">Switch Community</div>
                         </a>
                      </div>

                      <div class="item my_link"> <%=link_to "Edit Profile",edit_user_registration_path%></div>
                      <div class="item my_link"><%= link_to "Sign Out",destroy_user_session_path,method: :delete %></div>
                   </div>
                </div>

             </div>


          </nav>
       </header>
    </headerbar>
<% end %>
