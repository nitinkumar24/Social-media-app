
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>


<main-page>
    <aside>
        <div class="sidepanel">
            <div class="home-profile" style="display: none">
                <div id="imgbox">
                    <%= image_tag current_user.avatar.url(:medium),:class =>"h-pro-image",:alt=>""%>
                </div>
                <div id="contentbox">
                    <span class="bigme"><%= link_to current_user.try(:name), url_for(controller:'newsfeed',action: 'profile',method: "get",user_id:current_user.id)%></span><br>
                </div>
            </div>

            <div id="probox" style="display: none">

                <div id="flw">
                    <b>Followers</b>
                    <br>
                    <%= current_user.followers(current_user.id) %>
                </div>
                <div id="flwe">
                    <b>Following</b><br>
                    <%= current_user.followee(current_user.id) %>
                </div>
                <div id="totalview">
                    <b>Total Views</b><br>100
                </div>

            </div>

           <div class="ui card">
              <div class="image">
                 <%= image_tag current_user.avatar.url(:medium),:class =>"h-pro-image",:alt=>""%>
              </div>
              <div class="content">
                 <a class="header"><%= link_to current_user.try(:name), url_for(controller:'newsfeed',action: 'profile',method: "get",user_id:current_user.id)%></a>
                 <div class="meta">
                    <span class="date">Joined in 2013</span>
                 </div>
                 <div class="description">
                    Kristy is an art director living in New York.
                 </div>
              </div>
              <div class="extra content">
                 <a>
                    <i class="user icon"></i>
                    <%= current_user.followers(current_user.id) %>
                 </a>
              </div>
           </div>



        </div>


    </aside>

    <section>
        <div class="createPost">

            <%= image_tag current_user.avatar.url(:medium),:class =>"createpost_image" ,:alt=>""%>

            <div class="input-post">
                <%= form_for @post,remote: true do |form| %>
                    <div class="">
                       <div class="ui form">
                          <div class="field">
                             <textarea rows="2" name="post[content]" id="post_content" placeholder="Hey,Let Your friends know that you're alive."></textarea>
                          </div>
                       </div>
                    </div>

                    <!--<div class="dup-pic" style="display: none">-->
                        <!--<img id="blah" src="#"  style="width:180px;height: 150px;">-->
                    <!--</div>-->
                   <div class="dup-pic" style="display: none;padding-top: 10px">

                      <img id="blah" src="#"  style="border-radius: 10px;width: 150px;height: 150px;">
                   </div>
                    <div class="postbox-toolbar">
                        <div id="upload-pic-dummy"   >
                            <div class="upload-pic">
                                <%= form.file_field :avatar ,id: "imgInp" %><br>
                            </div>
                            <i class="fa fa-picture-o  fa-2x image-icon" aria-hidden="true"></i>
                        </div>
                        <div class="anonymous">
                            <h3 >Anonymous
                                <%= form.check_box :anonymous %>
                            </h3>

                        </div>
                        <%= form.submit 'Post', :class => 'postbutton'   %>
                    </div>

                <% end %>

            </div>

        </div>



        <div id="posts">

            <% @feed.each do |post| %>
                <%= render 'post', post: post %>
            <% end %>
        </div>
        <br>
        <div id='load_more'>
            <%= render 'load_more', offset: 10 %>
        </div>

    </section>

    <ads>
       <div class="ui half page test ad" data-text="Ads"></div>
    </ads>

    <chatbox>
    </chatbox>

</main-page>

