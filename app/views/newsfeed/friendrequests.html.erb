<div class="ui cards" >
<% @friendrequests.each do | req | %>
    <% user=User.where(id: req.sender_id).first%>
       <div class="card" style="width: 40%;margin-left: 30%;">
          <div class="content">
             <%= image_tag user.avatar.url(:medium),:class =>" right floated mini ui image" %>
             <div class="header">
                <%=user.try(:name)  %>
             </div>
             <div class="description">
                <%=user.try(:name)  %>  wants to follow you
             </div>
          </div>
          <div class="extra content">
             <div class="ui two buttons" id="request_<%= req.id%>">
                <div class="ui basic green button"><%= link_to "accept", url_for(controller: :friendrequests, action: :accept_request, follower_id: req.sender_id,req_id: req.id), method: :post,remote: true %></div>
                <div class="ui basic red button"><%= link_to "reject", url_for(controller: :friendrequests, action: :reject_request, follower_id: req.sender_id,req_id: req.id), method: :post, remote: true  %>

                </div>
             </div>
          </div>
       </div>

<% end %>
</div>