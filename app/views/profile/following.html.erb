<div class="followers_page">
   <h1>You are following these in <%= current_user.current_mode %> community</h1>
   <div class="ui six doubling cards">
      <% @followee.each do |f| %>
          <% user = User.find_by_id(f.followee_id) %>

          <% if user.confirmed? %>
              <div class="card">
                 <div class="image">
                    <%= image_tag user.avatar.url(:thumb),:class =>"profile_image" %>
                 </div>
                 <div class="content">
                    <div class="header">
                       <%= render 'profile/profile_link' ,user: user %>

                    </div>
                    <div class="meta">
                       <%= user.email %>
                    </div>

                 </div>
                 <span class="follow_button">

                 <%= render 'newsfeed/follow_link', user: user %>


              </span>
              </div>
          <% end %>
      <% end %>

      <%= will_paginate @followee  %>
   </div>
</div>