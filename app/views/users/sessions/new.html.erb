
<head>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<style>

   body{
      margin:0px;
      padding:0px;
      font-family: 'Source Sans Pro', sans-serif;
      background-size: 600% 600% !important;
      /* -webkit-animation: itlGradient 16s ease infinite; */
      -moz-animation: itlGradient 16s ease infinite;
      -o-animation: itlGradient 16s ease infinite;
      /*animation: itlGradient 16s ease infinite;*/
      background-size:100% 94vh;


   }

   @-webkit-keyframes itlGradient {
      0%{background-position:90% 0%}
      50%{background-position:11% 100%}
      100%{background-position:90% 0%}
   }
   @-moz-keyframes itlGradient {
      0%{background-position:90% 0%}
      50%{background-position:11% 100%}
      100%{background-position:90% 0%}
   }
   @-o-keyframes itlGradient {
      0%{background-position:90% 0%}
      50%{background-position:11% 100%}
      100%{background-position:90% 0%}
   }
   @keyframes itlGradient {
      0%{background-position:90% 0%}
      50%{background-position:11% 100%}
      100%{background-position:90% 0%}
   }

</style>


<div id="signin-page" class="animated ">
   <div class="front-page-logo">
      <h3 class=''>Socio_Grams</h3>
   </div>

   <div id="sign-in-form-section" >
      <div class="sign-in-form"  >
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

             <p class="form-topic"><i class="fa fa-sign-in" aria-hidden="true"></i>
                Sign-In</p><hr style="color: #721615"><br>
             <% unless user_signed_in? %>

                 <span style="color: red;padding-bottom:5px " ><%= notice %></span>
                 <span style="color: red;padding-bottom:5px "><%= alert %></span>

                 <% end  %>
             <%= f.email_field :email, autofocus: true ,placeholder:"Email",required: true%>
             <%= f.password_field :password, autocomplete: "off",placeholder:"Password",required: true %>

             <br>
             <% if devise_mapping.rememberable? -%>

                 <%= f.check_box :remember_me %>
                 <%= f.label :remember_me,class:"remember_me" %>

             <% end -%>
             <br>

             <%= f.submit "Log in" ,class:"login-button"%><br>
             <p style="text-align:center;margin-bottom:10px;color: black">OR</p>
             <hr>
             <div style="padding-left: 8px;padding-top: 10px;">
                <%= render "users/shared/links" %>
             </div>
         <% end %>


      </div>
   </div>
   <div class="slogans">

   </div>
</div>
<div class="typed-slogan">
   <h3 id="typed-sample" style="color: #730E15"></h3>
</div>

