
<div class="ui  comments" id="reply_<%=reply.id%>">
   <div class="comments-content">
      <% user = reply.user %>

      <div class="comment">
         <a class="avatar">
            <%= image_tag user.avatar.url(:medium),:class =>"profile_image",:alt=>"" %>

         </a>
         <div class="content">
            <a class="author">
               <%= render 'profile/profile_link' ,user: user %>

            </a>
            <div class="metadata">
               <span class="date"><%= reply.created_at.localtime.strftime("%d %b %I:%M%p") %></span>

               <div class="ui dropdown">
                  <i class="dropdown icon"></i>
                  <div class="menu left">
                     <div class="item">
                        <% if reply.can_delete current_user %>

                            <%= link_to 'Delete', reply, method: :delete, remote:true, data: { confirm: 'Are you sure?' } %>

                        <% end %>
                     </div>
                     <div class="item">
                        <% if reply.can_update current_user %>
                            <%= link_to 'Edit', edit_reply_path(reply), remote:true %>
                        <% end %>
                     </div>

                  </div>
               </div>


            </div>


            <div id="reply_form_<%= reply.id  %>">
            </div>
            <div id="reply_orig_content_<%= reply.id  %>">
               <%= markdown(reply.content) %>
            </div>





         </div>
      </div>


   </div>


</div>

<script>
    $('.ui.dropdown')
        .dropdown()
    ;

</script>