<main-page>
   <div class="users-page">

      <%= form_tag search_users_path, :method => 'get' do %>

          <div class="search-bar" >
             <div class="wrap">
                <div class="search">
                   <!--<input type="text" class="searchTerm form-control typeahead" id="article_search" name="query" placeholder="Search for your college buddies">-->
                   <div class="ui icon input"  style="">
                      <input type="text" name="query" class="typeahead" autofocus placeholder="Search">

                      <button class="ui button" style="background:none;color:black;padding: 10px">
                         <i class="search link icon"></i>
                      </button>
                      <div class="" id="filter-toggle" style="    align-items: center;font-size: 24px;color: #7d2d76;display: flex;padding-right: 11px;">
                         <i class="fa fa-filter" aria-hidden="true"></i>
                      </div>
                   </div>



                   <div class="filters">
                      <div class="ui form">
                         <div class="ui selection dropdown">
                            <input type="hidden" name="gender">
                            <i class="dropdown icon"></i>
                            <div class="default text" data-value="" >Gender</div>
                            <div class="menu">
                               <div class="item" data-value="male">Male</div>
                               <div class="item" data-value="female">Female</div>
                            </div>
                         </div>


                         <div class="ui selection dropdown">
                            <input type="hidden" name="department">
                            <i class="dropdown icon"></i>
                            <div class="default text">Department</div>
                            <div class="menu">
                               <div class="item" data-value="CSE">CSE</div>
                               <div class="item" data-value="IT">IT</div>
                               <div class="item" data-value="ME">ME</div>
                               <div class="item" data-value="CE">CE</div>
                               <div class="item" data-value="ECE">ECE</div>
                               <div class="item" data-value="EN">EN</div>
                               <div class="item" data-value="EI">EI</div>

                            </div>
                         </div>

                            <div class="ui selection dropdown">
                               <input type="hidden" name="relationstatus">
                               <i class="dropdown icon"></i>
                               <div class="default text">Relationship Status</div>
                               <div class="menu">
                                  <div class="item" data-value="single">SAKHT (Single)</div>
                                  <div class="item" data-value="taken">Taken</div>
                                  <div class="item" data-value="foreveralone">Forever Alone</div>
                               </div>
                            </div>

                         <button class="ui button" style="color: white;
                             font-size: 16px;
                             background-color: #7d2d76;
                             border: 1px solid;
                             border-radius: 4px;
                             font-family: 'Poiret One',sans-serif;">
                            Search
                         </button>




                      </div>
                   </div>

                </div>
             </div>
          </div>
      <% end %>
      <div id="users">
         <%= render 'users' %>
         <%= will_paginate @users %>

      </div>

   </div>
   <ads>
      <div class="ui half page test ad">
         <br><br>
         <br><br>
         <br><br>
         <br><br>
         <h3 style="text-align: center">Advertise your brand here<h3>
            <hr>




      </div>
   </ads>
</main-page>

<script>

    $('.ui.dropdown')
        .dropdown()
    ;
    //For toogling the filter
    $("#filter-toggle").click(function(){
        $(".filters").slideToggle();
    });
</script>