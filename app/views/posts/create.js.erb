

<% if @post.nil? %>
noty({
    text: 'Oops! You have less than 5 followers',
    theme: 'metroui',
    type: 'alert',
    layout: 'topCenter',
    timeout: 1000

});

<% else %>
noty({
    text: 'Post was Created',
    theme: 'metroui',
    type: 'alert',
    layout: 'topCenter',
    timeout: 1000

});

$('#posts').prepend("<%= escape_javascript (render 'post', post: @post) %>");

$("#imgInp").val('');
$(".dup-pic").css("display","none");

<% end %>
$('#post_content').val("");
$('#post_anonymous').attr('checked', false); // Unchecks it

